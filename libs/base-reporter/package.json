{
  "name": "@allegoria/test-reporter-base",
  "license": "Apache-2.0",
  "version": "0.1.0",
  "private": false,
  "bugs": {
    "url": "https://github.com/AllegoriaHQ/test-reporters-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AllegoriaHQ/test-reporters-js.git"
  },
  "main": "dist/index.js",
  "types": "src/index.ts",
  "publishConfig": {
    "access": "public",
    "types": "dist/index.d.ts"
  },
  "scripts": {
    "clean": "rm -rf dist tsconfig.build.tsbuildinfo",
    "build": "pnpm clean && pnpm transpile && pnpm declaration",
    "transpile": "swc -d dist src",
    "declaration": "tsc --project tsconfig.build.json --emitDeclarationOnly",
    "typecheck": "tsc --project tsconfig.test.json --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/core": "^1.22.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.49.1",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.49.1",
    "@opentelemetry/otlp-exporter-base": "^0.49.1",
    "@opentelemetry/resources": "^1.22.0",
    "@opentelemetry/sdk-trace-base": "^1.22.0",
    "@opentelemetry/semantic-conventions": "^1.22.0",
    "date-fns": "^3.6.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "vitest": "^1.4.0"
  }
}
